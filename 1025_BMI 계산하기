<!DOCTYPE html>
<html lang="ko">

<head>
    <meta charset="UTF-8">
    <title>BMI 계산하기</title>
</head>

<body>

    <script>

        // 키와 몸무게 입력받기
        var height = prompt("height?") / 100;
        var weight = prompt("weight?");
        var bmi = weight / (height * height);

        document.write("<h2>weight : " + weight + "</h2>");
        document.write("<h2>height : " + height + "</h2>");
        document.write("<h2>bmi : " + bmi + "</h2>")

        if (bmi < 18.5) {
            document.write("<h2>당신은 저체중입니다.</h2>")
        } else if (bmi < 25) {
            document.write("<h2>당신은 정상입니다.</h2>")
        } else if (bmi < 30) {
            document.write("<h2>당신은 과체중입니다.</h2>")
        } else if (bmi > 30) {
            document.write("<h2>당신은 비만입니다.</h2>")
        } else {
            document.write("<h2>판단할 수 없음.</h2>")
        }

    </script>

</body>

</html>
